<h2>Books</h2>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>

  <tbody>
  <% @books. each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td class="btn"><%= link_to "Show", book_path(book.id) %></td>
      <td class="btn"><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td class="btn"><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "are you sure?" %></td>
    </tr>
  <% end %>
  </tbody>
</table>


<div class="post">
  <h2>New book</h2>

 <% if @book.errors.any? %>
  <div class="error_explanation">
   <h4><%= @book.errors.count %> errors prohibited this obj from being saved:</h4>
  　<ul><% @book.errors.full_messages.each do |message| %></ul>
  　<li><%= message %></li>
 　 <% end %>
  </div>
　<% end %>
  
　<%= form_with model:@book, url:'/books', local: true do |f| %>
　
   <label>Title</label>
   <%= f.text_field :title %>
   <label>Body</label>
   <%= f.text_area :body %><br>
  <%= f.submit "Create Book" %>
　<% end %>
　
</div>