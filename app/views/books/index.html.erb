<h2>Books</h2>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>

  <tbody>
  <% @books. each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "are you sure?" %></td>
    </tr>
  <% end %>
  </tbody>
</table>



  <h2>New book</h2>
<div class="post">
<%= form_with model:@book, url:'/books', local: true do |f| %>
 <% if @book.errors.any? %>
  <div class="error_explanation">
   <h4><%= @book.errors.count %> errors prohibited this obj from being saved:</h4>
  <ul><% @book.errors.full_messages.each do |message| %></ul>
  <li><%= message %></li>
  <% end %>
 <% end %>
  </div>

   <label>Title</label>
   <%= f.text_field :title %>

   <label>Body</label>
   <%= f.text_area :body %>

  <P><%= f.submit "Create Book" %></P>

<% end %>
</div>