<h1>Editing Book</h1>

<div class="post">
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
 <% if @book.errors.any? %>
 <div class="error_explanation">
 <h4><%= @book.errors.count %> errors prohibited this obj from being saved:</h4>
 <ul><% @book.errors.full_messages.each do |message| %></ul>
  <li><%= message %></li>
 <% end %>
 <% end %>
 </div>

  <label>Title</label>
  <%= f.text_field :title %>
  <label>Body</label>
  <%= f.text_area :body %>
  <P><%= f.submit "Update Book" %></P>
<% end %>
</div>

<div>
 <%= link_to "Show", book_path(@book.id) %>
 <span>|</span>
 <%= link_to "back", books_path %>
