<h1>Editing Book</h1>

<div class="post">
 <% if @book.errors.any? %>
 <div class="edit error_explanation">
 <h4><%= @book.errors.count %> errors prohibited this obj from being saved:</h4>
 <ul><% @book.errors.full_messages.each do |message| %></ul>
  <li><%= message %></li>
 <% end %>
 <% end %>
 </div>

　<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
  　<label>Title</label>
  　<%= f.text_field :title %>
  　<label>Body</label>
  　<%= f.text_area :body %><br>
  　<%= f.submit "Update Book" %>
　<% end %>
</div>

<div>
 <span class="btn"><%= link_to "Show", book_path(@book.id) %></span>
 <span>|</span>
 <span class="btn"><%= link_to "back", books_path %></span>
</div>